<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/left_label"
        android:layout_width="85dp"
        android:layout_height="fill_parent"
        android:background="@color/main_list_header_left_label_background"
        android:gravity="center"
        android:textColor="@color/main_list_header_left_label_font"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/right_label"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/main_list_header_right_label_background"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/main_list_header_right_label_font"
        android:textIsSelectable="false"
        android:textSize="14sp" />

    <View
        android:background="#fff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.9" />

</LinearLayout>